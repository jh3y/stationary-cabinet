*
  box-sizing border-box

body
  display grid
  background hsl(0 0% 85%)
  place-items center
  min-height 100vh


.dialog
  overflow hidden
  resize horizontal
  min-width 20vmin
  max-width 50vmin
  position absolute
  padding 0
  border-radius 2vmin 2vmin 0 0
 
.dialog__header
  height 44px
  background hsl(0 0% 25%)
  border-bottom 4px solid black
  z-index 2
  display flex
  align-items center
  justify-content flex-start
  padding 0 1rem
  gap 0.5rem

svg
  width 50vmin
  max-width 50vmin
  aspect-ratio 1
  
.dialog__control
  height 40%
  background var(--bg, red)
  aspect-ratio 1
  border-radius 50%
  
  &--exit
    --bg hsl(10 90% 50%)
    
  &--minimize
    --bg hsl(40 100% 50%)
    
  &--maximize
    --bg hsl(120 80% 50%)
  
